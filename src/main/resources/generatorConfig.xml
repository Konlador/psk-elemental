<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="ElementalDB" targetRuntime="MyBatis3Simple">
        <jdbcConnection driverClass="org.h2.Driver"
                        connectionURL="jdbc:h2:~/h2database/ElementalDB;AUTO_SERVER=TRUE"
                        userId="sa"
                        password="sa">
        </jdbcConnection>

        <javaModelGenerator targetPackage="lt.psk.mybatis.model" targetProject="MAVEN" />

        <sqlMapGenerator targetPackage="lt.psk.usecases.mybatis.xml" targetProject="MAVEN" />
        <javaClientGenerator type="XMLMAPPER" targetPackage="lt.psk.mybatis.dao" targetProject="MAVEN" />


        <table schema="public" tableName="elem">
            <generatedKey column="id" identity="true" sqlStatement="JDBC" />
            <ignoreColumn column="opt_lock_version" />
        </table>
        <table schema="public" tableName="recipe">
            <generatedKey column="id" identity="true" sqlStatement="JDBC" />
            <ignoreColumn column="opt_lock_version" />
        </table>
        <table schema="public" tableName="recipe_elem"/>
    </context>
</generatorConfiguration>